<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="15dp"
    app:layout_goneMarginBottom="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded">

        <LinearLayout
            android:id="@+id/line"
            android:background="#37D7ED"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="0dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TittleBar"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Tittle"
                android:text="vvvirir3hvbijwnihbvefdnwc fehejdwojfeiheijdwokjefihjwkofjekwjfijwkcefhjiwdefhwijhfwdjcfhdfd"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/updateBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#37D7ED"
                android:src="@drawable/baseline_edit_24" />

            <ImageButton
                android:id="@+id/deletebtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#37D7ED"
                android:src="@drawable/baseline_delete_outline_24" />


        </LinearLayout>

        <TextView
            android:id="@+id/contentBar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/line"
            android:layout_marginTop="-14dp"
            android:background="@drawable/eachitemview"
            android:hint="Content"
            android:padding="19dp"
            android:textColor="@color/black"
            android:textSize="18dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>